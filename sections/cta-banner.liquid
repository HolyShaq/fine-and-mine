<div class="page-width">
  <div
    class="tw:items-center{% if section.settings.image %} tw:flex tw:flex-col tw:sm:flex-row-reverse tw:h-fit tw:sm:h-[280px] {% endif %}"
    style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};"
  >
    {% if section.settings.image %}
      {{
        section.settings.image
        | image_url: height: 279
        | image_tag: class: 'tw:flex-1 tw:object-cover tw:max-h-full tw:max-w-full tw:sm:max-w-1/2 tw:mt-8 tw:sm:m-0'
      }}
    {% endif %}
  
    <div class="tw:flex tw:flex-col tw:flex-1 tw:gap-4 tw:p-8 tw:lg:p-16 tw:h-full tw:items-center {% unless section.settings.image %} tw:text-center tw:justify-center {% else %} tw:max-w-full tw:sm:max-w-1/2 tw:justify-center tw:sm:items-start  {% endunless %}">
      <h2 class="tw:font-semibold tw:text-4xl">
        {{ section.settings.header }}
      </h2>
      <p class="tw:max-w-2xl tw:lg:max-w-3xl">{{ section.settings.content }}</p>
      <a href="{{ section.settings.collection.url }}" class="button tw:font-bold tw:w-fit">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "CTA Banner",
  "tag": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "header",
      "label": "Header",
      "default": "Lorem Ipsum Dolor Sit Amet"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Content",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#10181f"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f0f0f0"
    }
  ],
  "presets": [
    {
      "name": "CTA Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
