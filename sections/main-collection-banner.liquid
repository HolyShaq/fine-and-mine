<div class="page-width tw:px-0 tw:lg:px-6 tw:flex tw:flex-col tw:gap-8 tw:mb-12">
  <img
    class="tw:w-full tw:aspect-square tw:sm:aspect-[400/167] tw:object-cover"
    src="{{ collection.image | image_url }}"
    width="{{ collection.image.width }}"
    height="{{ collection.image.height }}"
  >
</div>
<div class="page-width">
  <h1 class="tw:text-6xl tw:font-bold tw:text-center tw:md:text-left">
    {{ collection.title }}
  </h1>
</div>

