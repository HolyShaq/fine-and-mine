<div class="page-width"
  style="padding-top: calc(var(--tw-spacing) * {{ section.settings.padding_y }}); padding-bottom: calc(var(--tw-spacing) * {{ section.settings.padding_y }});"
>
  <div class="tw:flex tw:flex-col tw:gap-8">
    <div class="tw:flex tw:flex-col tw:text-center tw:gap-4 tw:items-center">
      <h1 class="tw:text-6xl tw:font-bold">{{ section.settings.title }}</h1>
      <p class="tw:max-w-[500px]">{{ section.settings.subtitle }}</p>
    </div>

    <div class="tw:flex tw:gap-1 {% if section.settings.reversed %}tw:flex-row-reverse{% else %}tw:flex-row{% endif %}">
      {% if section.settings.image %}
        <div class="tw:flex-1/3">
          <img
            class="tw:object-cover tw:h-full"
            src="{{ section.settings.image | image_url }}"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            loading="lazy"
          >
        </div>
      {% endif -%}
      {% if section.settings.video %}
        <div class="tw:flex-2/3">
          {{ section.settings.video | video_tag: controls: true, loop: 'loop', class: 'tw:w-full tw:h-full tw:object-cover' }}
        </div>
      {% endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Media Showcase",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Own your Shine"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "checkbox",
      "id": "reversed",
      "label": "Reverse Order"
    },
    {
      "type": "range",
      "id": "padding_y",
      "label": "Vertical Padding",
      "min": 0,
      "max": 16,
      "default": 12,
      "info": "Use this to adjust the spacing above and below the section."
    }
  ],
  "presets": [
    {
      "name": "Media Showcase",
      "category": "Custom"
    }
  ]
}
{% endschema %}
